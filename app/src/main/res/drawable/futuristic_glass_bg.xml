<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base blur layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#266DB4FF"
                android:startColor="#264FCCFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Border glow effect -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#804FCCFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</layer-list>