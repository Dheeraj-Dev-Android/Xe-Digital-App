<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:backgroundTint="#F4F4F4"
    android:fontFamily="@font/quicksand_font_family"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/quicksand_font_family"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/quicksand_font_family"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/btn_viewAttendance"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/view_details"
                android:src="@drawable/ic_eye"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/OccasionalLeave" />

            <ImageButton
                android:id="@+id/btn_regularize"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/regularize"
                android:src="@drawable/ic_clock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_viewAttendance"
                app:tint="#FF9800" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_font_family"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_font_family"
                android:text="@string/date"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/punchInTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_font_family"
                android:text="Punch In: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/punchOutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_font_family"
                android:text="Punch Out: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/totalTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_font_family"
                android:text="Total Time: "
                android:textColor="@color/LossOfPay"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lateTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_font_family"
                android:text="Late Time: "
                android:textColor="#BF0E0E"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>